  <style name="AutoCompleteTextViewMadsonic.Dark" parent="android:Widget.Holo.AutoCompleteTextView">
      <item name="android:dropDownSelector">@drawable/list_selector_dark</item>
	    <item name="android:background">@drawable/edit_text_dark</item>
        <item name="android:textColor">@color/white</item>
  </style>

  <style name="CheckBoxMadsonic.Dark" parent="android:Widget.CompoundButton.CheckBox">
      <item name="android:button">@drawable/btn_check_dark</item>
  </style>
  
  <style name="RadioButtonMadsonic.Dark" parent="android:Widget.CompoundButton.RadioButton">
      <item name="android:button">@drawable/btn_radio_holo_dark</item>
  </style>

  <style name="ButtonMadsonic.Dark" parent="android:Widget.Holo.Button">
      <item name="android:background">@drawable/btn_default_dark</item>
      <item name="android:textColor">@color/grey</item>  
      <item name="android:fontFamily">sans-serif-light</item>
  </style>
  
  <style name="ImageButtonMadsonic.Dark" parent="android:Widget.Holo.ImageButton">
      <item name="android:background">@drawable/buttonbar_selector_dark</item>
      <item name="android:listSelector">@drawable/list_selector_dark</item>
  </style>

  <style name="Widget.Dark.ImageButton" parent="Widget.Holo.ImageButton">
      <item name="android:background">@drawable/buttonbar_selector_dark</item>
      <item name="android:listViewStyle">@style/ListViewMadsonic.Dark</item>	  
  </style>  
  <style name="SpinnerMadsonic.Dark" parent="android:Widget.Holo.Spinner">
      <item name="android:background">@drawable/spinner_background_holo_dark</item>
      <item name="android:dropDownSelector">@drawable/list_selector_dark</item>
  </style>

  <style name="TabWidgetMadsonic.Dark" parent="@android:style/Widget.TabWidget">
      <item name="android:tabStripLeft">@null</item>
      <item name="android:tabStripRight">@null</item>
      <item name="android:tabStripEnabled">false</item>
      <item name="android:divider">?android:attr/dividerVertical</item>
      <item name="android:showDividers">middle</item>
      <item name="android:dividerPadding">8dip</item>
      <item name="android:measureWithLargestChild">true</item>
      <item name="tabLayout">@layout/tab_indicator_dark</item>
  </style>

  <style name="TabMadsonic.Dark" parent="@android:style/Widget.ActionBar.TabView">
      <item name="android:paddingLeft">16dip</item>
      <item name="android:paddingRight">16dip</item>
      <item name="android:background">@drawable/tab_indicator_dark</item>
      <item name="android:layout_width">0dip</item>
      <item name="android:layout_weight">1</item>
      <item name="android:minWidth">80dip</item>
  </style>
