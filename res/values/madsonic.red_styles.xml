<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="EditTextMadsonic.Red" parent="android:Widget.EditText">
	  <item name="android:background">@drawable/edit_text_red</item>
	  <item name="android:textColor">#ffffff</item>
  </style>

  <style name="AutoCompleteTextViewMadsonic.Red" parent="android:Widget.AutoCompleteTextView">
      <item name="android:dropDownSelector">@drawable/list_selector_red</item>
	  <item name="android:background">@drawable/edit_text_dark</item>
	  <item name="android:textColor">#ffffff</item>
  </style>

  <style name="CheckBoxMadsonic.Red" parent="android:Widget.CompoundButton.CheckBox">
      <item name="android:button">@drawable/btn_check_red</item>
  </style>

  <style name="ButtonMadsonic.Red" parent="android:Widget.Button">
	  <item name="android:background">@drawable/btn_default_red</item>
	  <item name="android:minHeight">48dip</item>
	  <item name="android:minWidth">64dip</item>
      <item name="android:textColor">@color/grey</item>  
  </style>

  <style name="ImageButtonMadsonic.Red" parent="android:Widget.ImageButton">
	  <item name="android:background">@drawable/btn_default_red</item>
      <item name="android:listSelector">@drawable/list_selector_red</item>
      <item name="android:dropDownSelector">@drawable/list_selector_red</item>	  
      </style> 

  <style name="Widget.Red.ImageButton" parent="Widget.Holo.ImageButton">
      <item name="android:background">@drawable/buttonbar_selector_red</item>
      <item name="android:listViewStyle">@style/ListViewMadsonic.Red</item>	  
  </style>   
  
  <style name="SpinnerMadsonic.Red" parent="android:Widget.Spinner">
      <item name="android:background">@drawable/spinner_background_holo_dark</item>
      <item name="android:dropDownSelector">@drawable/list_selector_red</item>
  </style>
<!-- 
  <style name="SpinnerMadsonic.Red.DropDown">
      <item name="android:spinnerMode">dropdown</item>
  </style>
 -->
  <style name="SpinnerDropDownItemMadsonic.Red" parent="android:Widget.DropDownItem.Spinner">
      <item name="android:checkMark">@drawable/btn_radio_holo_dark</item>
  </style>
  
  <style name="ProgressBarMadsonic.Red" parent="android:Widget.ProgressBar.Horizontal">
      <item name="android:progressDrawable">@drawable/progress_horizontal_red</item>
      <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_dark</item>
      <item name="android:minHeight">16dip</item>
      <item name="android:maxHeight">16dip</item>
  </style>

  <style name="SeekBarMadsonic.Red" parent="android:Widget.SeekBar">
      <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_red</item>
      <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal_red</item>
      <item name="android:minHeight">13dip</item>
      <item name="android:maxHeight">13dip</item>
      <item name="android:thumb">@drawable/scrubber_control_selector_red</item>
      <item name="android:thumbOffset">16dip</item>
      <item name="android:paddingLeft">16dip</item>
      <item name="android:paddingRight">16dip</item>
  </style>

  <style name="ToggleMadsonic.Red" parent="android:Widget.Button.Toggle">
      <item name="android:background">@drawable/btn_toggle_red</item>
      <item name="android:minHeight">48dip</item>
	  <item name="android:textColor">#ffffff</item>
  </style>

  <style name="ListViewMadsonic.Red" parent="android:Widget.ListView">
      <item name="android:listSelector">@drawable/list_selector_red</item>
      <item name="android:cacheColorHint">@android:color/transparent</item>
  </style>

  <style name="ListViewMadsonic.Red.White" parent="android:Widget.ListView.White">
      <item name="android:listSelector">@drawable/list_selector_red</item>
      <item name="android:cacheColorHint">@android:color/transparent</item>
  </style>

  <style name="SpinnerItemMadsonic.Red" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
      <item name="android:textColor">#ffffff</item>
  </style>

     
</resources>